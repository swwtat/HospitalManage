.picker-container {
  padding: 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 24rpx;
}

.picker-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.picker-display {
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 24rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #007aff;
  background-color: #f9f9f9;
}

.arrow {
  color: #999;
  font-size: 26rpx;
}

.picker-result {
  font-size: 28rpx;
  color: #444;
  padding-top: 8rpx;
}
