/* pages/profileForm/profileForm.wxss */
page {
  background: linear-gradient(135deg, #d4fc79, #96e6a1);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.container {
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
}

/* 选项卡 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-radius: 50rpx;
  padding: 10rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.1);
  margin-bottom: 50rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #666;
  border-radius: 40rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #1aad19, #4cd964);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(26,173,25,0.3);
}

/* 表单卡片 */
.form-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.1);
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #444;
  margin-bottom: 10rpx;
}

.input{
  height: 90rpx;
  width: 100%;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}
.textarea,
.picker {
  height: 90rpx;
  width: 100%;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.input:focus,
.textarea:focus {
  border-color: #1aad19;
  background: #fff;
}

.textarea {
  min-height: 160rpx;
  resize: none;
}

.picker {
  line-height: 60rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(26,173,25,0.3);
  transition: all 0.2s ease-in-out;
}

.submit-btn:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 10rpx rgba(26,173,25,0.4);
}
