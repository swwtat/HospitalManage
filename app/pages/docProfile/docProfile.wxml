<!--pages/docProfile/docProfile.wxml-->
  <!-- 科室选择卡片 -->
  <view class="card">
    <text class="card-title">科室选择</text>
    <view class="card-content">
      <button class="action-btn" bindtap="goToDepartment">选择科室</button>
      <picker mode="selector" range="{{departments}}" bindchange="onDeptChange" disabled="true">
        <view class="picker-display">{{selectedDept || '请选择科室'}}</view>
      </picker>
    </view>
  </view>
    <!-- 医生选择卡片 -->
    <view class="card">
    <text class="card-title">医生选择</text>
    <view class="card-content">
      <button class="action-btn" bindtap="goToDocs">选择医生</button>
      <picker mode="selector" range="{{doctors}}" bindchange="onDocChange" disabled="true">
        <view class="picker-display">{{selectedDoc || '请选择医生'}}</view>
      </picker>
    </view>
  </view>
