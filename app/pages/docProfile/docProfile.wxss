/* pages/docProfile/docProfile.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(180deg, #e8f0ff 0%, #f9fbfd 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部标题 */
.header {
  text-align: center;
  margin-bottom: 50rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #2b68ff;
  letter-spacing: 2rpx;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 卡片容器 */
.card {
  width: 90%;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  padding: 32rpx;
  margin-bottom: 40rpx;
  transition: all 0.2s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.08);
}

/* 卡片标题 */
.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2b68ff;
  margin-bottom: 20rpx;
}

/* 卡片内容 */
.card-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 操作按钮 */
.action-btn {
  width: 100%;
  margin-top: 5%;
  background: linear-gradient(135deg, #2b68ff, #6fc1ff);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  padding: 15rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(43, 104, 255, 0.25);
  transition: all 0.25s ease;
}

.action-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 10rpx rgba(43, 104, 255, 0.25);
}

/* 选择展示框 */
.picker-display {
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: #444;
  border: 1rpx solid #e5e5e5;
}

/* 挂号提交按钮 */
.register-btn {
  width: 90%;
  padding: 28rpx 0;
  margin-top: 30rpx;
  background: linear-gradient(135deg, #1aad19, #28d02e);
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 50rpx;
  box-shadow: 0 10rpx 25rpx rgba(26, 173, 25, 0.3);
  letter-spacing: 2rpx;
  text-align: center;
  transition: all 0.25s ease;
}

.register-btn:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 18rpx rgba(26, 173, 25, 0.25);
}

/* 提示信息 */
.message {
  margin-top: 40rpx;
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
}
