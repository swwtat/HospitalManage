/* 页面背景 */
page {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container {
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* Logo 和标题上下排列 */
.logo-area {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeIn 0.8s ease;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 20rpx auto;
  box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.12);
  animation: floatLogo 3s ease-in-out infinite;
}

@keyframes floatLogo {
  0% { transform: translateY(0);}
  50% { transform: translateY(-12rpx);}
  100% { transform: translateY(0);}
}

/* 标题更醒目、居中 */
.app-title {
  font-size: 46rpx;
  font-weight: 800;
  color: #333;
  letter-spacing: 2rpx;
  text-shadow: 0 4rpx 10rpx rgba(0,0,0,0.15);
}

/* 登录卡片：毛玻璃卡片 */
.login-card {
  background: rgba(255, 255, 255, 0.75); /* 毛玻璃透明度微调 */
  backdrop-filter: blur(28rpx);
  border-radius: 30rpx;
  padding: 60rpx 42rpx;
  box-shadow: 0 14rpx 40rpx rgba(0,0,0,0.12);
  animation: fadeInUp 0.7s ease;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(50rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 输入框组 */
.input-group {
  margin-bottom: 42rpx;
}

.label {
  color: #555;
  font-size: 30rpx;
  margin-bottom: 12rpx;
  display: block;
}

.input {
  width: 100%;
  height: 86rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 22rpx;
  font-size: 32rpx;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
  transition: all 0.25s ease;
}

.input:focus {
  border-color: #1aad19;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(26,173,25,0.25);
}

/* 登录按钮升级：更柔和拟物 */
.login-btn {
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  padding: 28rpx 0;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 
      0 12rpx 24rpx rgba(26,173,25,0.28),
      inset 0 5rpx 8rpx rgba(255,255,255,0.35);
  transition: all 0.2s ease-in-out;
}

.login-btn:active {
  transform: scale(0.96);
  box-shadow: 0 6rpx 16rpx rgba(26,173,25,0.35);
}

/* 链接区域 */
.link-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 45rpx;
  color: #777;
  font-size: 28rpx;
}

.link {
  color: #1aad19;
  margin: 0 12rpx;
}

.divider {
  color: #aaa;
}

/* 底部 */
.footer {
  margin-top: 110rpx;
  text-align: center;
  color: #888;
  font-size: 24rpx;
}

/* 动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}
