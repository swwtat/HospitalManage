/* pages/login/login.wxss */
page {
  background: linear-gradient(135deg, #a8edea, #fed6e3);
  min-height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.container {
  width: 100%;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.logo-area {
  text-align: center;
  margin-bottom: 80rpx;

}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  box-shadow: 0 8rpx 16rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.app-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.login-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
}

.input-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  color: #666;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 32rpx;
  border: 1px solid #e0e0e0;
  box-sizing: border-box;
}

.input:focus {
  border-color: #1aad19;
  background: #fff;
}

.login-btn {
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(26,173,25,0.3);
  transition: all 0.2s ease-in-out;
}

.login-btn:active {
  transform: scale(0.97);
  box-shadow: 0 4rpx 10rpx rgba(26,173,25,0.4);
}

.link-area {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  color: #777;
  font-size: 28rpx;
}

.link {
  color: #1aad19;
  margin: 0 10rpx;
}

.divider {
  color: #aaa;
}

.footer {
  margin-top: 100rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
