<view class="container">

<!-- 顶部 Logo + 标题（竖向布局） -->
<view class="logo-area">
  <image class="logo" src="/assets/logo.png" mode="aspectFit"></image>
</view>
<view class="logo-area">
  <text class="app-title">校医院综合服务系统</text>
</view>
<!-- 登录卡片 -->
<view class="login-card">

  <view class="input-group">
    <text class="label">账号</text>
    <input class="input" type="text" placeholder="请输入账号" bindinput="onUsernameInput" />
  </view>

  <view class="input-group">
    <text class="label">密码</text>
    <input class="input" type="password" placeholder="请输入密码" bindinput="onPasswordInput" />
  </view>

  <button class="login-btn" bindtap="onLogin">登 录</button>

  <view class="link-area">
    <text class="link" bindtap="onRegister">注册账号</text>
    <text class="divider">|</text>
    <text class="link" bindtap="onForgetPwd">忘记密码</text>
  </view>

</view>

<!-- 底部版权 -->
<view class="footer">
  <text>© 2025 校医院服务系统</text>
</view>

</view>
