<view class="container">
  <view class="form">
    <view class="form-item">
      <text>旧密码</text>
      <input password placeholder="请输入旧密码" value="{{oldPassword}}" bindinput="onOldInput" />
    </view>
    <view class="form-item">
      <text>新密码</text>
      <input password placeholder="至少6位，包含字母和数字" value="{{newPassword}}" bindinput="onNewInput" />
    </view>
    <view class="form-item">
      <text>确认新密码</text>
      <input password placeholder="再次输入新密码" value="{{confirm}}" bindinput="onConfirmInput" />
    </view>

    <button class="submit-btn" bindtap="onSubmit">提交</button>
  </view>
</view>
