/* pages/docAccount/docAccount.wxss */

/* 页面整体背景与居中 */
.container {
  /* 采用柔和的灰蓝背景，卡片居中 */
  background: #f5f8fb;
  min-height: 100vh;
  padding: 40rpx 28rpx;
  box-sizing: border-box;

  /* flex 居中卡片（竖向居中） */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片样式 */
.card {
  width: 680rpx;            /* 小程序端常用尺寸，按需调整 */
  max-width: 92%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 34rpx;
  box-sizing: border-box;

  /* 轻微投影与边框分层 */
  box-shadow: 0 12rpx 30rpx rgba(20, 33, 61, 0.06);
  border: 1rpx solid rgba(15,36,63,0.04);
}

/* 标题 */
.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #10233b;           /* 深海蓝 */
  margin-bottom: 22rpx;
  letter-spacing: 0.6rpx;
}

/* 输入框通用样式（兼容原生 <input>） */
input,
.text-input {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  padding: 0 28rpx;
  box-sizing: border-box;

  background: #fbfdff;
  border: 1rpx solid #e6eef8;
  border-radius: 14rpx;

  font-size: 28rpx;
  color: #18324a;
  margin-bottom: 18rpx;

  /* 平滑的交互反馈 */
  transition: border-color 150ms linear, box-shadow 150ms linear, transform 80ms;
}

/* 原生 placeholder 颜色 */
input::placeholder {
  color: #9eb1c6;
}

/* 输入框聚焦态 */
input:focus,
.text-input:focus {
  border-color: #4f9efc;
  box-shadow: 0 6rpx 20rpx rgba(79,158,252,0.12);
  outline: none;
}

/* 提交按钮（原生 <button>）美化 */
button {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  padding: 0;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 700;
  letter-spacing: 0.6rpx;
  cursor: pointer;

  /* 渐变 + 阴影（注意：小程序中支持 background-image） */
  background-image: linear-gradient(90deg, #4f9efc 0%, #6bd3ff 100%);
  color: #ffffff;
  box-shadow: 0 18rpx 30rpx rgba(79,158,252,0.18);
  margin-top: 6rpx;
  transition: transform 120ms ease, box-shadow 120ms ease, opacity 120ms;
}

/* 按钮按下（touch）反馈 */
button:active {
  transform: translateY(3rpx);
  box-shadow: 0 8rpx 18rpx rgba(79,158,252,0.12);
}

/* 信息提示（错误或成功） */
.msg {
  margin-top: 18rpx;
  min-height: 28rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ff4d4f; /* 错误色，成功时可以替换成 #16a085 */
}

/* 小提示/辅助行 */
.hint {
  font-size: 22rpx;
  color: #6f8597;
  text-align: center;
  margin-top: 8rpx;
}

/* 响应式：小屏幕缩小卡片与字体 */
@media (max-width: 340px) {
  .card { padding: 28rpx; border-radius: 18rpx; }
  .title { font-size: 30rpx; }
  input, .text-input { height: 84rpx; font-size: 26rpx; line-height: 84rpx; }
  button { height: 84rpx; font-size: 28rpx; line-height: 84rpx; }
}

/* 额外：让 link 风格的文本（若需要）更明显 */
.link {
  color: #3b82f6;
  font-weight: 600;
  font-size: 24rpx;
  text-align: center;
  display: block;
  margin-top: 12rpx;
}
