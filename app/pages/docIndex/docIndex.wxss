/* pages/docWorkbench/docWorkbench.wxss */

/* 页面背景与布局 */
.container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f3f9ff 0%, #e8f0fc 100%);
  padding: 40rpx 28rpx;
  box-sizing: border-box;
}

/* 卡片主容器 */
.card {
  width: 700rpx;
  max-width: 92%;
  background: #ffffff;
  border-radius: 28rpx;
  padding: 48rpx 38rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 12rpx 40rpx rgba(0, 90, 200, 0.08);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  text-align: center;
  animation: fadeIn 0.5s ease both;
}

/* 动画效果 */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f2e5a;
  letter-spacing: 1rpx;
  margin-bottom: 50rpx;
  text-align: center;
}

/* 通用按钮样式 */
button {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  margin-bottom: 28rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  color: #ffffff;
  border: none;
  transition: all 0.15s ease;
  box-shadow: 0 14rpx 24rpx rgba(79, 158, 252, 0.18);
}

/* 按钮颜色分层设计 */
button:nth-child(2) {
  background-image: linear-gradient(90deg, #4f9efc 0%, #6bd3ff 100%);
}
button:nth-child(3) {
  background-image: linear-gradient(90deg, #60b7ff 0%, #3f94ff 100%);
}
button:nth-child(4) {
  background-image: linear-gradient(90deg, #70d2a3 0%, #45ba78 100%);
}
button:nth-child(5) {
  background-image: linear-gradient(90deg, #ff6f6f 0%, #f84444 100%);
  box-shadow: 0 14rpx 24rpx rgba(255, 100, 100, 0.22);
}

/* 按钮按下反馈 */
button:active {
  transform: translateY(3rpx);
  opacity: 0.95;
  box-shadow: 0 8rpx 14rpx rgba(0, 0, 0, 0.1);
}

/* 响应式适配 */
@media (max-width: 340px) {
  .card { padding: 30rpx; border-radius: 20rpx; }
  .title { font-size: 34rpx; margin-bottom: 28rpx; }
  button { height: 84rpx; font-size: 28rpx; line-height: 84rpx; }
}
