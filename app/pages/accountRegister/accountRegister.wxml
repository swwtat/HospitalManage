<view class="container">

<!-- LOGO + 标题 -->
<view class="logo-area">
  <image class="logo" src="/assets/logo.png" mode="aspectFit"></image>
  <text class="app-title">校医院综合服务系统 - 注册</text>
</view>

<!-- 注册卡片 -->
<view class="login-card">

  <view class="input-group">
    <text class="label">账号</text>
    <input class="input" placeholder="请输入账号" bindinput="onUsernameInput" />
  </view>

  <view class="input-group">
    <text class="label">密码</text>
    <input class="input" password placeholder="请输入密码" bindinput="onPasswordInput" />
  </view>

  <view class="input-group">
    <text class="label">确认密码</text>
    <input class="input" password placeholder="请再次输入密码" bindinput="onConfirmInput" />
  </view>

  <button class="login-btn" bindtap="onRegister">注 册</button>

  <view class="link-area">
    <text class="link" bindtap="onLogin">去登录</text>
  </view>

</view>

<!-- 底部版权 -->
<view class="footer">
  <text>© 2025 校医院服务系统</text>
</view>
</view>
