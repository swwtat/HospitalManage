/* 整体容器 */
.container {
  padding: 40rpx 32rpx;
  min-height: 100vh;
  background: linear-gradient(180deg, #e8f0ff 0%, #f7f9fc 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* LOGO 与标题区 */
.logo-area {
  text-align: center;
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  opacity: 0.95;
}

.app-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #355c9c;
  letter-spacing: 1rpx;
}

/* 注册卡片 */
.login-card {
  width: 92%;
  background: #ffffff;
  padding: 50rpx 40rpx;
  border-radius: 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

/* 卡片光斑效果 */
.login-card::before {
  content: "";
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  background: rgba(91, 157, 249, 0.12);
  top: -70rpx;
  right: -70rpx;
  border-radius: 50%;
  filter: blur(25rpx);
}

/* 输入区域 */
.input-group {
  margin-bottom: 36rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #355c9c;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 76rpx;
  padding: 18rpx 22rpx;
  border-radius: 14rpx;
  background: #f3f6fb;
  border: 1rpx solid #dce6f7;
  font-size: 28rpx;
  transition: all 0.25s ease;
  box-shadow: inset 0 0 0 rgba(0,0,0,0);
}

/* 输入框聚焦美化 */
.input:focus {
  background: #ffffff;
  border: 1rpx solid #5b9df9;
  box-shadow: 0 0 12rpx rgba(91, 157, 249, 0.35);
}

/* 按钮 */
.login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #5b9df9, #6fc1ff);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  line-height: 80rpx;
  border-radius: 20rpx;
  margin-top: 10rpx;
  box-shadow: 0 10rpx 25rpx rgba(91, 157, 249, 0.32);
  transition: all 0.25s ease;
}

/* 按钮点击效果 */
.login-btn:active {
  transform: scale(0.96);
  opacity: 0.9;
}

/* 登录跳转链接 */
.link-area {
  margin-top: 26rpx;
  text-align: center;
}

.link {
  font-size: 28rpx;
  color: #5b9df9;
  text-decoration: underline;
}

/* 底部版权 */
.footer {
  text-align: center;
  margin-top: 60rpx;
  color: #8aa0c1;
  font-size: 24rpx;
}
