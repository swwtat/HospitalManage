/* pages/catalog/catalog.wxss */

.catalog-container {
    padding: 0;
    background-color: #f0f3f6; /* 柔和背景色 */
    min-height: 100vh;
  }
  
  /* 顶部Header - 突出主题色 */
  .page-header {
    background: linear-gradient(135deg, #2b68ff 0%, #5b9df9 100%); /* 统一主题色 */
    color: white;
    padding: 60rpx 30rpx 40rpx 30rpx; 
    text-align: left; 
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.15);
  }
  
  .page-title {
    display: block;
    font-size: 52rpx; 
    font-weight: 700;
    margin-bottom: 10rpx;
  }
  
  .page-subtitle {
    display: block;
    font-size: 28rpx;
    opacity: 0.9;
  }
  
  /* 功能模块Section容器 */
  .main-content {
    padding: 0 30rpx; 
  }
  
  .section {
    margin-top: 30rpx; 
    background-color: white;
    padding: 30rpx 30rpx 40rpx 30rpx; 
    border-radius: 20rpx; 
    box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.05); /* 增强模块立体感 */
    margin-bottom: 20rpx;
  }
  .section.last-section {
    margin-bottom: 40rpx;
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: 600;
    margin-bottom: 30rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #e0e0e0; 
  }
  
  /* 模块标题颜色区分 */
  .patient-title { color: #2b68ff; } /* 蓝色 */
  .doctor-title { color: #1aad19; } /* 绿色 */
  .other-title { color: #888; } /* 灰色 */
  
  
  .section-title text {
    display: block;
  }
  
  /* 网格布局 */
  .pages-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25rpx; 
  }
  
  /* 功能卡片 */
  .page-card {
    background: #ffffff;
    border: 1rpx solid #f0f0f0; /* 极浅边框 */
    border-radius: 18rpx; 
    padding: 30rpx 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start; /* 顶部对齐内容 */
    text-align: center;
    transition: all 0.2s ease;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08); /* 突出阴影 */
    min-height: 200rpx; /* 最小高度防止内容少时塌陷 */
  }
  
  /* 卡片点击交互效果 */
  .page-card:active {
    background-color: #f0f6ff;
    border-color: #5b9df9;
    box-shadow: 0 2rpx 8rpx rgba(43, 104, 255, 0.3);
    transform: scale(0.98);
  }
  
  .card-icon {
    font-size: 56rpx; 
    margin-bottom: 16rpx; /* 增大间距 */
    line-height: 1;
  }
  
  .card-name {
    font-size: 28rpx; 
    font-weight: 600;
    color: #333;
    margin-bottom: 6rpx;
    word-break: break-word;
  }
  
  .card-desc {
    font-size: 24rpx; 
    color: #999;
    word-break: break-word;
    line-height: 1.4;
  }
  
  /* 底部说明文本 */
  .footer-note {
    padding: 40rpx 30rpx;
    text-align: center;
    color: #888;
    font-size: 24rpx;
    background-color: #f0f3f6;
  }
  
  /* 响应式调整 (针对平板或 PC 视图) */
  @media (min-width: 768px) {
    .pages-grid {
      grid-template-columns: 1fr 1fr 1fr 1fr; /* 增大列数 */
    }
    
    .page-header {
      padding: 50rpx 50rpx 40rpx 50rpx;
    }
    
    .main-content {
      padding: 0 50rpx;
    }
  }