<!--index.wxml-->
  <!-- 卡片按钮区 -->
  <view class="container">
    
    <!-- 头图 -->
    <image src="../../assets/header.jpg" class="header-image" mode="aspectFill"></image>
  
    <view class="bigcard" bindtap="onClick" data-action="挂号">
      <image class="card-icon" src="../../assets/register.png"></image>
      <text class="bigcard-text">我要挂号</text>
    </view>
    <view class="bigcard" bindtap="onClick" data-action="预约">
      <image class="card-icon" src="../../assets/appointment.png"></image>
      <text class="bigcard-text">我要预约</text>
    </view>
    <!-- 卡片按钮区 -->
    <view class="card-grid">
  
      <view class="card" bindtap="onClick" data-action="查询">
        <image class="card-icon" src="../../assets/search.png"></image>
        <text class="card-text">我要查询</text>
      </view>
  
      <view class="card" bindtap="onClick" data-action="健康档案">
        <image class="card-icon" src="../../assets/health.png"></image>
        <text class="card-text">健康档案</text>
      </view>
    </view>
  </view>
  
  
   
