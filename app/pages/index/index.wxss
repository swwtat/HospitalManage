/* 页面整体背景 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f7f9fc;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 顶部头图 */
.header-image {
  width: 92%;
  height: 320rpx;
  border-radius: 24rpx;
  margin: 40rpx 0 30rpx 0;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
}

/* 大卡片样式 */
.bigcard {
  width: 85%;
  height: 180rpx;
  background: linear-gradient(135deg, #5b9df9, #6fc1ff);
  border-radius: 26rpx;
  box-shadow: 0 10rpx 30rpx rgba(91, 157, 249, 0.3);
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 50rpx;
  transition: all 0.25s ease;
}

/* 点击浮动反馈 */
.bigcard:active {
  transform: scale(0.97);
  opacity: 0.9;
}

/* 大卡片图标 */
.card-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}

/* 大卡片文字 */
.bigcard-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}

/* 小卡片区 */
.card-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  width: 85%;
  margin-top: 40rpx;
}

/* 小卡片样式 */
.card {
  background: #ffffff;
  border-radius: 22rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 0.25s ease;
}

/* 点击反馈 */
.card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 小卡片图标与文字 */
.card-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 20rpx;
}

.card-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}
