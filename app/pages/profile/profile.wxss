/* 页面整体背景 */
.container {
  padding: 30rpx;
  background: linear-gradient(180deg, #e8f0ff 0%, #f7f9fc 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 顶部个人信息卡 */
.profile-card {
  width: 90%;
  background: linear-gradient(135deg, #5b9df9, #6fc1ff);
  padding: 50rpx 30rpx;
  border-radius: 28rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(91, 157, 249, 0.3);
  color: #fff;
  position: relative;
  overflow: hidden;
}

/* 发光背景装饰 */
.profile-card::before {
  content: "";
  position: absolute;
  width: 220rpx;
  height: 220rpx;
  background: rgba(255, 255, 255, 0.15);
  top: -60rpx;
  right: -60rpx;
  border-radius: 50%;
  filter: blur(20rpx);
}

/* 头像 */
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 用户名 */
.username {
  font-size: 46rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

/* 用户ID */
.userid {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.85);
}

/* 功能卡片区域 */
.card-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 20rpx;
  gap: 26rpx;
}

/* 单个功能卡片 */
.card {
  width: 42%;
  height: 180rpx;
  background: linear-gradient(135deg, #6fc1ff, #5b9df9);
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.08);
  transition: all 0.25s ease;
  color: #fff;
  overflow: hidden;
  position: relative;
}

/* 卡片渐变亮点装饰 */
.card::after {
  content: "";
  position: absolute;
  top: -60rpx;
  left: -60rpx;
  width: 160rpx;
  height: 160rpx;
  background: rgba(255, 255, 255, 0.18);
  border-radius: 50%;
  filter: blur(20rpx);
}

/* 卡片点击动效 */
.card:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  opacity: 0.95;
}

/* 图标与文字 */
.card-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
  z-index: 1;
}

.card-text {
  font-size: 34rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
  z-index: 1;
}
