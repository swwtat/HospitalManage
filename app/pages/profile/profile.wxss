/* pages/profile/profile.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.profile-card {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 15rpx;
}

.username {
  font-size: 50rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 5rpx;
}

.userid {
  font-size: 34rpx;
  color: #888;
}
.card-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 30rpx;
  gap: 20rpx;
}

.card {
  width: 42%;
  height: 160rpx;
  background: linear-gradient(135deg, #929292, #c7c7c7);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.1);
  transition: all 0.2s ease-in-out;
}

.card-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.card-text {
  font-size: 36rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
}

/* 点击缩放动画 */
.card:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.2);
}
