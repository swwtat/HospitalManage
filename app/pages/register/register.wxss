/* pages/register/register.wxss */
.container {
  padding: 20px;
  background-color: #f5f5f5;
}
.deptBtn
{
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  font-size: 30rpx;
  color: #444;
}
.header {
  font-size: 24px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
}

.section {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  margin-bottom: 5px;
  display: block;
}

.picker {
  padding: 10px;
  background-color: #fff;
  border-radius: 5px;
  border: 1px solid #ccc;
}
.picker-box {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
  font-size: 30rpx;
  color: #444;
}

.register-btn {
  width: 100%;
  padding: 12px 0;
  background-color: #1aad19;
  color: #fff;
  border-radius: 5px;
  font-size: 16px;
}

.message {
  margin-top: 20px;
  color: red;
  font-size: 14px;
  text-align: center;
}
