/* pages/appointment/appointment.wxss */
.container { padding: 12px; }
.section { margin-bottom: 18px; background: #fff; padding: 10px; border-radius: 6px; }
.section-title { font-weight: bold; font-size: 16px; margin-bottom: 8px; }
.item { padding: 8px 0; border-bottom: 1px solid #f0f0f0; display: flex; flex-direction: column; }
.item-title { font-size: 14px; color: #333; }
.item-sub { color: #666; font-size: 12px; margin-top: 4px; }
.item-status { color: #888; font-size: 12px; margin-top: 4px; }
.badge { padding: 4px 8px; border-radius: 12px; font-size: 12px; color: #fff; }
.badge.available { background: #07c160; }
.badge.reserved { background: #ff9800; }
.badge.expired { background: #9e9e9e; }
.wait-pos { margin-top:6px; font-size:14px; color:#d81e06; font-weight:600; }
.wait-num { font-size:16px; color:#d81e06; font-weight:700; margin-left:6px; }
.empty { color: #aaa; font-size: 13px; text-align: center; padding: 8px 0; }
.primary { background-color: #07c160; color: #fff; margin-top: 8px; }
.danger { background-color: #ff4444; color: #fff; margin-top: 8px; }
.msg { color: #ff4444; text-align: center; margin-bottom: 8px; }